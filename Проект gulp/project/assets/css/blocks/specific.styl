input:focus {
  border: 1px solid #000;
  outline: none;
}

input:hover {
	color: #00BFBF;
	border: 2px solid #80DFDF;
}

input::-webkit-input-placeholder {
	color: #2E4D95;
	-webkit-transition: all .1s linear;
	transition: all .1s linear;
}

input::-moz-placeholder {
	color: #2E4D95;
	-moz-transition: all .1s linear;
	transition: all .1s linear;
}

input:-ms-input-placeholder {
	color: #2E4D95;
	-ms-transition: all .1s linear;
	transition: all .1s linear;
}

input::-ms-input-placeholder {
	color: #2E4D95;
	-ms-transition: all .1s linear;
	transition: all .1s linear;
}

input::placeholder {
	color: #2E4D95;
	transition: all .1s linear;
}

input:hover::-webkit-input-placeholder {
	color: #00BFBF;
}

input:hover::-moz-placeholder {
	color: #00BFBF;
}

input:hover:-ms-input-placeholder {
	color: #00BFBF;
}

input:hover::-ms-input-placeholder {
	color: #00BFBF;
}

input:hover::placeholder {
	color: #00BFBF;
}

input:focus {
	border: 2px solid #2E4D95;
	font-weight: 600;
	font-size: 20px;
	color: #2E4D95
}

input:invalid {
	border: 2px solid #F61538;
	color: red;
	font-weight: 500;
	font-size: 20px;
}

