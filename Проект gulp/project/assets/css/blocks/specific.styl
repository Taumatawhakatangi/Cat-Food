body {
  font: 400 16px "Oswald", sans-serif;
  letter-spacing: 0.02em;
}

.container {
  width: 100%;
  max-width: 1250px;
  margin: 0 auto;
  padding: 0 15px;
  position: relative;
}

.btn 
	text-align center
	display block
	padding 14px 26px
	text-decoration none
	background color3
	color color1
	transition all 0.2s ease
	font-size 20px
	border 1px solid transparent
	white-space nowrap
	text-transform uppercase


.btn:hover {
  background: darken(color3, 10%);
  border: 1px solid transparent;
}

.btn:active {
  background: darken(color3, 20%);
}

