body.scroll {
  overflow: hidden;
}

.animated {
  opacity: 0;
}

.page {
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  min-height: 100vh;
  min-width: 320px;
}

.footer {
  margin-top: auto;
}

.tel {
  white-space: nowrap;
}

.section-title {
  font-size calc(36px + (60 - 36) * ((100vw - 320px) / (1920 - 320)));
}

