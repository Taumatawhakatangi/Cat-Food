.result 
    padding 30px 0 0
    & h2 
        padding 30px 0 75px
    &__info 
        background-color color4
        padding 66px 0 75px    
        position relative
    & p 
        color color5
        line-height 24px
        font-weight 400
        margin-bottom 69px
        max-width 440px
    &__data 
        display flex
        margin-bottom 55px
    &__quantity 
        display block
        text-transform uppercase
        color color6
        font-size calc(24px + (30 - 24) * ((100vw - 320px) / (1920 - 320)));
        line-height 37px
        padding-top 15px
        padding-bottom 25px
        border 1px color7 solid
        border-radius 5px
        &_weight 
            padding-left 57px
            padding-right 57px
            margin-right 42px
        &_days 
            padding-left 30px
            padding-right 30px
    &__item 
        position relative
    &__subtitle 
        display block
        color color8
        font-weight 400
        position relative
        top: -15px;
        background-color color4
        text-align center
        &_weight 
            width 128px
            right: -19px;
        &_days 
            width: 136px;
            right: -13px;
            // left 10%
    &__price-wrapper 
        display flex
    &__price-title 
        font-size calc(18px + (20 - 18) * ((100vw - 320px) / (1920 - 320)));
        line-height 20px
        text-transform uppercase
        margin-right 63px
    &__price
        font-size calc(18px + (20 - 18) * ((100vw - 320px) / (1920 - 320)));
        line-height 20px
        text-transform uppercase
        margin-right 40px
        font-weight 700

.weight-results 
    position absolute
    top -180px
    right 20%
    min-width 536px
    min-height 643px
    & img 
        max-height: 540px
        left 22px
    &__text
        font-size calc(18px + (20 - 18) * ((100vw - 320px) / (1920 - 320)));
        text-transform uppercase
        font-weight bold
        bottom 50%
    &__before
        position absolute
        left 0
    &__after
        position absolute
        right 0

.twentytwenty-handle 
    transform rotate(90deg)
    top initial
    bottom 30px
    width 34px
    height 34px
    margin-left 3px
    border 1px solid #CDCDCD
    box-shadow none
    background-color color1

.twentytwenty-left-arrow 
    display none

.twentytwenty-right-arrow 
    width 8px
    height 8px
    background-color #68B738
    border-radius 100%
    border none
    top: 18.7px;
    right: 28.1px;

.twentytwenty-horizontal .twentytwenty-handle:after, 
.twentytwenty-horizontal .twentytwenty-handle:before 
    width 6px
    border-radius 5px
    background-color #DCDCDC

.twentytwenty-horizontal .twentytwenty-handle:before
    bottom 34%
.twentytwenty-horizontal .twentytwenty-handle:after
    top 34%

.twentytwenty-horizontal .twentytwenty-handle:after, .twentytwenty-horizontal .twentytwenty-handle:before, .twentytwenty-vertical .twentytwenty-handle:after, .twentytwenty-vertical .twentytwenty-handle:before
    box-shadow none