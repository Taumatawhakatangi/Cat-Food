.header
    padding-bottom 40px
.header__inner 
    width 100%
    position absolute
    left 0
    top 53px
    z-index 2
.menu 
    display flex
    align-items center
    justify-content: space-between
    &__list
        display flex
    &__item
        position relative
        &:hover.menu__item::after
            opacity 1
            top 35px
        &::after 
            content ""
            display block
            position absolute
            left 0
            top 70px
            width 100%
            height 2px
            background-color color1
            opacity 0
            transition all .4s ease
        &:not(:last-of-type)
            margin-right 35.5px     
        & a
            text-transform uppercase
            font-weight 400
            font-size calc(18px + (20 - 18) * ((100vw - 320px) / (1920 - 320)));
            line-height 29.64px
            color color1

.header__offer
    padding 141px 0 54px
    position relative
    &::after
        content ""
        display block
        position absolute
        right 0
        top 0
        width 50%
        min-height calc(305px + (696 - 305) * ((100vw - 320px) / (1920 - 320)));
        background url(../img/offer-background-desktop.png) no-repeat center right / cover

.offer
    &__info 
        padding-left 80px
    display flex
    align-items: center
    &__title
        font-size calc(36px + (60 - 36) * ((100vw - 320px) / (1920 - 320)));
        color color2
        max-width 441px
        margin-bottom calc(25px + (40 - 25) * ((100vw - 320px)/ (1920 - 320)));
        font-weight 400
        line-height calc(36px + (60 - 36) * ((100vw - 320px)/ (1920 - 320)));
    &__subtitle 
        font-size calc(14px + (20 - 14) * ((100vw - 320px) / (1920 - 320)));
        color color2
        text-transform uppercase
        margin-bottom 52px
        font-weight 400
    &__img 
        position relative
        left -5.4%
        z-index 2
        &:hover
            transform scale(1.003)
.offer__btn_reverse 
    display none
    